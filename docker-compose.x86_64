version: '2'
services:
  homebridge:
    image: oznu/homebridge:latest
    restart: always
    network_mode: host
    logging:
      driver: json-file
      options:
        max-size: "10mb"
        max-file: "1"
    volumes:
      - homebridge:/homebridge
  wifi-spot:
    network_mode: host
    restart: always
    build:
      context: .
      dockerfile: Dockerfile.x86_64
    image: betothreeprod/hapwizpy-intel-nuc
    env_file:
      - common.env
      - .env
    privileged: true
    labels:
      io.balena.features.dbus: 1
    volumes:
      - hostapd:/etc/hostapd
      - hapwizard:/etc/hapwizard
      - wifi-connect:/usr/src/python-wifi-connect/
      - netplan:/etc/netplan
    depends_on:
      - wifi-box
  wifi-box:
    network_mode: host
    build:
      context: ./python-wifi-connect
      dockerfile: Dockerfile.x86_64
    image: betothreeprod/python-wifi-connect-intel-nuc
    labels:
      io.balena.features.dbus: 1
      io.balena.features.supervisor-api: 1
    privileged: true
    ports:
      - "80:80"
    volumes:
      - wifi-connect:/usr/src/app/
volumes:
  hostapd:
  hapwizard:
  wifi-connect:
  netplan:
  homebridge:
